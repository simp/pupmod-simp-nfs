[General]

<% if @verbosity then -%>
Verbosity = <%= @verbosity %>
<% end -%>
Domain = <%= @domain %>
<% if @local_realms then -%>
Local-Realms = <%= Array(@local_realms).join(',') %>
<% end -%>

[Mapping]

Nobody-User = <%= @nobody_user %>
Nobody-Group = <%= @nobody_group %>

[Translation]

Method = <%= Array(@trans_method).join(',') %>
<% if @gss_methods then -%>
GSS-Methods = <%= Array(@gss_methods).join(',') %>
<% end -%>

[Static]
<%
if @static_translation then
  @static_translation.each_pair do |k,v|
-%>
<%= k %> = <%= v %>
<%
  end
end
-%>

