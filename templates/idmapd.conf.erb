# This file is managed by Puppet. Any changes made to the file will be
# overwritten at the next Puppet run.
<% if @content -%>
<%= @content -%>
<% else -%>
[General]

<%  if @verbosity -%>
Verbosity = <%= @verbosity %>
<%  end -%>
<%  if @domain -%>
Domain = <%= @domain %>
<%  end -%>
<%  if @local_realms -%>
Local-Realms = <%= Array(@local_realms).join(',') %>
<%  end -%>

[Mapping]

Nobody-User = <%= @nobody_user %>
Nobody-Group = <%= @nobody_group %>

[Translation]

Method = <%= Array(@trans_method).join(',') %>
<%  if @gss_methods -%>
GSS-Methods = <%= Array(@gss_methods).join(',') %>
<%  end -%>

[Static]
<%
  if @static_translation
    @static_translation.each_pair do |k,v|
-%>
<%= k %> = <%= v %>
<%
    end
  end
-%>

[UMICH_SCHEMA]

# This is not yet supported by the SIMP configuration.
<% end -%>
